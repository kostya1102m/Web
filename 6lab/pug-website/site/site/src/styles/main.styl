
alignment()
	display block
	margin auto

body
	font-family Trebuchet MS, sans-serif

header
	width 100%
	margin auto
	margin-bottom 5px
	display flex
	background-color lightgray
	padding 10px
	font-size 16px
	font-weight bold

.title
	flex: 28%;
	align-content: center;

.menu
	flex: 72%
	width: 100%
	display grid

	&__ul
			display grid
			grid-template-rows 1fr
			grid-template-columns repeat(auto-fit, minmax(120px, max-content));
			justify-content left
			margin 0
		
		& li
			list-style-type: none

		& a
			text-decoration: none
			color: black

			&:focus
				text-decoration: underline


	&__ul-profile
		margin 0
		text-align center

		& a
			margin 0 3px 0 3px

.content
	margin auto

	&__gallery
		margin auto
		display grid
		grid-template-columns repeat(3, 1fr)
		margin-bottom 10px

		& img
			width: 100%
		
		
	&__gallery-bill
		grid-column: 1 / 4
		$ img
			display block
			height: 70%

	&__logo
		display grid
		grid-template-rows 1fr
		grid-template-columns repeat(4, 1fr)
		margin-bottom 15px
		margin auto
		width 70%

		& div
			margin auto
			text-align center

			& img
				height 100px
				width 100px
				border-radius 50%
		
	&__main
		margin 15px auto

	&__main-person
		display grid
		grid-template-rows 1fr
		grid-template-columns 3fr 1fr
	
	&__main-person_mirrored
		display grid
		grid-template-rows 1fr
		grid-template-columns 3fr 1fr
		direction: rtl
	
	&__discript-person
		grid-row: 1 / 2
		grid-column: 1 / 2
		word-spacing: normal

		& h3
			margin 0
			text-align center
		& p
			text-align center

	&__image-person
		display flex
		justify-content: flex-end
		grid-row: 1 / 2
		grid-column: 2 / 3

		& img
			display block
			border solid thick grey
			width 250px
			height 250px


widths = 16%, 33%, 50%
widths_ = 50%, 33%, 16%


for col in 1..3
	.block-{1}-{col}
		width: widths[col - 1]

for col in 1..3
	.block-{2}-{col}
		width: widths_[col - 1]




footer
	background-color lightgray

	& h4
		padding 10px
		color black

.big
	display flex
	max-height 500px
	width 100%
	


.special-section
	display: flex
	justify-content: space-between

	p
		width: 50%

@media (max-width: 800px)
	
	.content

		&__gallery
			grid-template-columns 1fr
			grid-template-rows repeat(4, 1fr)

		&__gallery-bill
			grid-column: 1
			grid-row: 1

		&__logo
			grid-template-columns 1fr

			& div
				grid-column: 1

		
		&__main-person
		&__main-person_mirrored
			grid-template-columns: 1fr
			grid-template-rows: 1fr 1fr


		&__discript-person
			grid-row: 2 / 3
			grid-column: 1 / 2

			& p
				text-align center
				margin-bottom 0
			& h3
				margin-top 15px

		&__image-person
			grid-row: 1 / 2
			grid-column: 1 / 2
			justify-content: center
			min-width: 100px
			min-height: 100px

			& img
				max-width: 772px
				max-height: 368px

	.special-section
		flex-direction: column
		p
			width: 100%

	.title
		display none
	
	.menu
		flex: 100%

		&__ul
			justify-content center
			margin 0 auto
			grid-template-columns 1fr 1fr
			row-gap 10px
			column-gap 50px
